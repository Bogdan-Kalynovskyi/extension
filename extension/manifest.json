{
    "manifest_version": 2,
    "name": "LJ",
    "description": "This extension helps us with LJ comments",
    "version": "1.0",
    "permissions": [
        "http://*/*", //todo: this could be filtered to LiveJournal, see commit history
        "https://*/*" //todo: not works on https, j think i know why
    ],
    "browser_action": {
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
              "http://*/*",
              "https://*/*" //todo: not works on https, j think i know why
            ],
            "js": [
                "jquery-1.9.0.js",
                "content.js"
            ]
        }
    ]
}