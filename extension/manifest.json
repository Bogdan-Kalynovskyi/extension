{
    "manifest_version": 2,
    "name": "LJ",
    "description": "This extension helps us with LJ comments",
    "version": "1.0",
    "permissions": [
        "http://*.livejournal.com/*",
        "https://*.livejournal.com/*"
    ],
    "browser_action": {
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*.livejournal.com/*",
                "https://*.livejournal.com/*"
            ],
            "js": [
                "jquery-1.9.0.js",
                "content.js"
            ]
        }
    ]
}