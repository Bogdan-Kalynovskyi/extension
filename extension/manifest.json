{
    "manifest_version": 2,
    "name": "LJ",
    "description": "This extension helps us with LJ comments",
    "version": "1.0",
    "permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "persistent": true,
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": [
              "http://*/*",
              "https://*/*"
            ],
            "css": ["content.css"],
            "js": [
                "content.js",
                "jquery-1.9.0.js"
            ]
        }
    ]
}